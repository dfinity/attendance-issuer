---
import Layout from "../layouts/Layout.astro";
import content from "../contents/index.json";
import Logos from "../components/Logos.astro";
---

<Layout title={content.meta.title}>
  <main class="design-width">
    <article class="card card--split">
      <div class="card__message">
        <Logos />
        <div class="card__image">
          <img src={content.returningImg} alt="Internet Identity" />
        </div>
        <h1 class="title title--success">{content.returningTitle}</h1>
      </div>
      <div class="card__cta">
        <h2 class="title title--sub">{content.returningTitle2}</h2>
        <p>{content.returningLead}</p>
        <a href={content.openchaturl} class="button button--inverted button--oc"
          >{content.returningButton}</a
        >
        <a href={content.openchaturl} class="link">{content.returningLink}</a
        >
      </div>
    </article>
  </main>
</Layout>
