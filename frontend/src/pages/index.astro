---
import Layout from '../layouts/Layout.astro';
import content from '../contents/index.json';
---

<Layout title={content.meta.title}>
  <div class="header design-width">
    <div class="header__logos">
      <div class="header__logo">
        <img class="header__image" src="vc-logo.webp" alt={content.meta.title} />
      </div>
      <div class="header__logo">
        <img class="header__image" src="ii-logo.webp" alt="Internet Identity" />
      </div>  
    </div>

    <aside class="header__links">
      {content.nav.map((item) => (
        <a class="heder__link" href={item.link}>{item.title}</a>
      ))}
      <a class="heder__link" href={content.githublink}>github</a>
      <a class="heder__link" href="#">{content.login}</a>
    </aside>
  </div>

  <main class="design-width">
      
    <article class="card">
      <h1>{content.mainTitle}</h1>
      <p>{content.mainLead}</p>
      <a href="#" class="button">{content.iibuttontext}</a>
    </article>
      
    <article>
      <span>{content.howtoChip}</span>
      <h2>{content.howtoTitle}</h2>
      <p>{content.howtoLead}</p>
      <ol>
        {content.howtoSteps.map((step) => (
          <li>
            <aside>
              <h3>{step.title}</h3>
              <p>{step.body}</p>
            </aside>
          </li>
          ))}
      </ol>
      <a href="#" class="button">{content.iibuttontext}</a>
    </article>

    <article>
      <span>{content.innovationChip}</span>
      <h2>{content.innovationTitle}</h2>
      <p>{content.innovationLead}</p>

      <div>
        {content.innovationCards.map((card) => (
          <aside class="card">
            <img src={card.image} alt={card.title} />
            <h3>{card.title}</h3>
            <p>{card.body}</p>
          </aside>
        ))}
      </div>
    </article>
          
    <footer class="design-width footer">
      <p><a href={content.copyright.link}>{content.copyright.text}</a></p>
    </footer>
  </main>
</Layout>
