---
import Layout from "../layouts/Layout.astro";
import content from "../contents/index.json";
import Logos from "../components/Logos.astro";
---

<Layout title={content.meta.title}>
  <main class="design-width design-width--tight">
    <img class="logo" src="/iivc-logo.webp" alt="Internet Identity Verifiable Credentials" />
    <h1>{content.connectionTitle}</h1>
    <p>{content.connectionLead}</p>
    <button class="button" data-register>{content.connectionButton}</button>
  </main>
</Layout>

<script>
  document.addEventListener('click', (e) => {
    const $target = e?.target as HTMLLinkElement;
    if (!$target.matches('[data-register]')) return;

    e.preventDefault();
    console.log('do the registration thingy!');
  }, true);
</script>
