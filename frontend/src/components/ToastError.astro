---
// Reference: Internet Identity Toasts
import WarningIcon from "./WarningIcon.astro";
---

<div
  role="alert"
  class="c-toast hide"
  id="toast-error"
>
  <div class="c-toast-body c-toast-body--error">
    <div class="c-toast-body__icon"><WarningIcon /></div>
    <p id="toast-error-message" class="c-toast-body__message">Something went wrong</p>
  </div>
</div>

<style>
  .hide {
    display: none;
  }

  .c-toast {
    position: relative;
    animation: appearFromBottom 200ms cubic-bezier(0.4, 0, 0.2, 1);
  }

  .c-toast-body {
    display: flex;
    align-items: center;
    gap: 1rem;

    position: relative;
    padding: 1rem 1rem;
    border: 1px solid var(--rc-toast-border);
    background-color: var(--rc-toast-background--error);
    border-radius: 0.8rem;
    overflow: hidden;
    box-shadow: 0 0 0 1px var(--rc-toast-background--error);
  }

  .c-toast-body__icon {
    background: var(--rc-toast-background--error);
  }

  .c-toast-body__icon svg {
    display: block;
    width: 70%;
    height: 70%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }
  .c-toast-body__icon svg [fill] {
    fill: #fff;
  }

  .c-toast-body__message {
    /* Ensures the content doesn't grow out of the toast or push other items */
    overflow-x: auto;

    font-size: 0.8em;
    line-height: 1.2;
    
    margin: 0;
    flex: 1;
  }

  .c-toast-body__close {
    background: transparent;
    cursor: pointer;
    border: none;
  }

  .c-toast-body__close svg {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100%;
    transform: translate(-50%, -50%) scale(0.6);
  }

  .c-toast-body__close:hover {
    --scale: 1.3;
  }

  @keyframes appearFromBottom {
    from {
      transform: translateY(100%);
    }
    to {
      transform: translateY(0);
    }
  }
</style>